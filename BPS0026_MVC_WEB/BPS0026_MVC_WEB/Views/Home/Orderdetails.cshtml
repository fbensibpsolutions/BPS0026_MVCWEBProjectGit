@using BPS0026_MVC_WEB.Models
@model dynamic

<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    @Html.ActionLink("Return Order", "OrderHome", "Home")

    <h2>@ViewData["no"]</h2>
    <span>Order Details</span>
    <table id="orderDetailsTable">
        <thead>
            <tr>
                <th>Order No</th>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Order orderdetails in Model.ordersDetailsList)
            {
                <tr>
                    <td>
                        @orderdetails.No
                    </td>
                    <td>
                        @orderdetails.Customers.CustomerName
                    </td>
                    <td>
                        @orderdetails.Date
                    </td>
                    <td>
                        @orderdetails.Amount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>