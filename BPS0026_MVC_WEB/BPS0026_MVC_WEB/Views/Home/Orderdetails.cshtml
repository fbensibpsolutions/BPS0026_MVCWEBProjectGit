@model IEnumerable<BPS0026_MVC_WEB.Models.OrderModel>
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link href="~/Content/OrderCss.css" rel="stylesheet" />
</head>
<body>

    <input type="button" value="Return Home" class="returnHome" />
    <h2>@ViewData["no"]</h2>
    <table>
        <tr>
            <td>Order No.</td>
            <td>Customer Name</td>
            <td>Order Date</td>
            <td>Total Amount</td>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.No</td>
                <td>@order.CustomerName</td>
                <td>@order.Date</td>
                <td><b>@order.Amount</b></td>
            </tr>
        }
    </table>

    <script>
    document.querySelector('.returnHome').addEventListener('click', event => {
        location.href = "@Url.Action("Index","Home")";
    });
    </script>
</body>
</html>